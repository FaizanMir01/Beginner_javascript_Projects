<%- include('header.ejs') %>
    <form action="/<%= posts._id %>?_method=PUT" method="post" class="form-class">
        <input type="text" name="name" required placeholder="Enter your name" value="<%= posts.name %>">
        <input type="text" name="image" required placeholder="enter url of image" value="<%= posts.image %>">
        <input type="number" name="age" required placeholder="enter your age" value="<%= posts.age %>">
        <input type="submit" value="Update">
    </form>
